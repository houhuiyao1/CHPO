.container{
  width: 90vw;
  position: relative;
}
.photo{
  width: 100%;
  height: 500rpx;
  border-radius: 15rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  margin-top: 40rpx;
}

.photo .image{
  width: 100%;
  height: 100%;
}

.bottom-left{
  height: 100%;
  overflow: hidden;
}

.head-photo{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  float: left;
  margin-right: 20rpx;
}

.name{
  line-height: 70rpx;
  font-size: 30rpx;
}

.bottom{
  position: relative;
  height: 70rpx;
}

.bottom-right{
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.icon{
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 24rpx;
  background-color: rgb(231, 229, 233);
  border-radius: 35rpx;
  padding: 10rpx 15rpx;
}

.icon image{
  width: 40rpx;
  height: 40rpx;
}

.icon .text{
  margin-left: 10rpx;
}

.content{
  font-size: 24rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 10rpx 0;
}

.time{
  height: 100%;
  display: flex;
  align-items: center;
  position: absolute;
  right: 0;
  bottom: 0;
}