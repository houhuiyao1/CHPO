.container{
  width: 44vw;
  position: relative;
  border-radius: 20rpx;
  margin: 10rpx 0;
  overflow: hidden;
}

.img{
  width: 100%;
}

.bottom{
  width: 100%;
  height: 70rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  background-color: white;
}

.icon{
  display: flex;
  font-size: 22rpx;
  margin-left: 6rpx;
}

.icon .image{
  width: 35rpx;
  height: 35rpx;
}