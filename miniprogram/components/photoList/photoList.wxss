.container{
  width: 44vw;
  position: relative;
  border-radius: 20rpx;
  margin: 10rpx 0;
  overflow: hidden;
}

.img{
  width: 100%;
}

.bottom{
  width: 100%;
  height: 70rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  background-color: white;
}

.school{
  position: absolute;
  top: 35rpx;
  right: 12rpx;
  transform: translate(0,-50%);
  font-size: 24rpx;
}

.icon{
  display: flex;
  font-size: 22rpx;
  margin-left: 6rpx;
}

.icon .image{
  width: 35rpx;
  height: 35rpx;
}

.labelBox{
  display: flex;
  clear: both;
  position: absolute;
  top: 10rpx;
  left: 0;
  width: 100%;
}

.label{
  width: 70rpx;
  height: 30rpx;
  font-size: 18rpx;
  background-color: #85dca7;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  border-radius: 20rpx;
  margin-left: 8rpx;
}

