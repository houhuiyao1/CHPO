page{
  background-color: white;
}

.container{
  position: relative;
  background-color: #F9FAFC;
  padding: 10rpx;
  margin-bottom: 15rpx;
}

.textarea{
  width: 95vw;
  margin: auto;
}

.image{
  width: 200rpx;
  height: 200rpx;
  float: left;
  position: relative;
  margin: 5rpx;
}

.image .mainImage{
  width: 200rpx;
  height: 200rpx;
}

.image .delect{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  top: 0;
}

.addimage{
  width: 200rpx;
  height: 200rpx;
  float: left;
  border: 1rpx #C6CCDA solid;
  display: flex;
  justify-content: center;
  align-items: center;
  margin:5rpx;
}

.container:after{
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.addimage image{
  width: 30%;
  height: 30%;
}

.textNums{
  font-size: 24rpx;
  position: absolute;
  bottom: 10rpx;
  right: 15rpx;
}

.select{
  width: 280rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  float: left;
}

.button{
  height: 60rpx;
  width: 120rpx;
  background-color: #C6CCDA;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: white;
  margin-bottom: 20rpx;
}

.fabu{
  float: right;
  background-color: #f8b551;
}

.title{
  clear: both;
  margin-left: 12rpx;
}

.labelBox{
  display: flex;
  justify-content: space-around;
  float: left;
  clear: both;
}

.label{
  width: 80rpx;
  height: 40rpx;
  font-size: 20rpx;
  background-color: #C6CCDA;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  border-radius: 20rpx;
  margin: 20rpx 12rpx;
}

.active{
  background-color: #2CD18A;
}
